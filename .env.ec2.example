POSTGRES_USER=screening
POSTGRES_PASSWORD=change-me
POSTGRES_DB=screening

# Frontend build-time API base. Keep "/" for same-origin via Nginx.
VITE_API_BASE_URL=/

# Nginx host port.
APP_PORT=80
APP_HTTP_PORT=80
APP_HTTPS_PORT=443

# Optional HTTPS (used with docker-compose.ec2.https.yml)
# Use absolute paths on EC2 host.
# TLS_CERT_PATH=/etc/letsencrypt/live/YOUR_DOMAIN/fullchain.pem
# TLS_KEY_PATH=/etc/letsencrypt/live/YOUR_DOMAIN/privkey.pem

# Backend runtime configuration.
SCREENING_CORS_ORIGINS=http://localhost
SCREENING_TORRE_BASE_URL=https://torre.ai
SCREENING_TORRE_TIMEOUT=8.0
SCREENING_TORRE_RETRIES=1

# Ollama (enabled by default in docker-compose.ec2.yml)
SCREENING_OLLAMA_BASE_URL=http://ollama:11434
SCREENING_OLLAMA_EMBED_MODEL=nomic-embed-text
SCREENING_OLLAMA_CHAT_MODEL=llama3.2
